<style>
    body {
        color: white;
    }

    img {
        /* Add the blur effect */
        filter: contrast(120%);
        filter: blur(.1px);
        -webkit-filter: blur(.8px);
        /* Full height */
        height: 100%;
        /* Center and scale the image nicely */
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    #bg {
        position: fixed;
        top: 0;
        left: 0;
        min-width: 100%;
        min-height: 100%;
        filter: brightness(.7);
    }

    .frontGrid {
        display: grid;
        position: absolute;
        grid-gap: 10px;
        width: 100%;
        height: 90%;
        z-index: 1;
        grid-template-rows: 10% 30% 50% 10%;
        grid-template-columns: 10% 25% 20% 25% 10%;
        grid-template-areas: ". . . . ." ". title title about ." ". optionSelect optionSelect optionSelect ." ". . . . ."
    }

    .buttons > form > button {
        background-color: cornflowerblue;
        border: none;
        color: white;
        padding: 4px 21px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        height: 88px;
        width: 100px;
    }

    .title {
        grid-area: title;
        font-size: 99px;
        width: 100%;
    }

    .about {
        grid-area: about;
        text-align: center;
        padding-top:38px;
    }

    .optionSelect {
        display: grid;
        grid-area: optionSelect;
        border: 3px solid rgba(25, 25, 25, .5);
        width: auto;
        padding: 20px;
        background: rgba(25, 25, 25, .5);
        border-radius: 3px;
        grid-template-rows: 1fr 2fr 1fr;
        grid-template-columns: 1fr;
        grid-template-areas: "top" "buttons" "submit"
    }

    .top {
        grid-area: top;
    }

    .buttons {
        display:flex;
        flex-direction: row;
        justify-content: center;
    }

    .submit {
        grid-area: submit;
    }

