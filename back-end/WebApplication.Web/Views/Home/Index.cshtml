@model LocationDetail
@{
    ViewData["Title"] = "Home Page";
}


<style>


    img {
        /* Add the blur effect */
        filter: contrast(120%);
        filter: blur(.1px);
        -webkit-filter: blur(.8px);
        /* Full height */
        height: 100%;
        /* Center and scale the image nicely */
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    #bg {
        position: fixed;
        top: 0;
        left: 0;
        min-width: 100%;
        min-height: 100%;
    }

    .frontGrid {
        display:grid;
        z-index: 2;
        grid-template-rows:1fr 1fr 1fr;
        grid-template-columns:1fr;
        grid-template-areas:
            "text"
            "entryField"
            "."
    }

    .entryField {
        border: 3px solid rgba(25, 25, 25, .5);
        position: absolute;
        width: 50%;
        padding: 20px;
        background: rgba(25, 25, 25, .5);
        border-radius: 3px;
    }

    button {
        border-radius: 9px;
        margin: 5px;
    }

    span {
        font-size: 18px;
    }

    head {
        position: center;
    }
</style>

<html>
<head>
</head>
<body>

    <img src="~/images/DimMapBackground.png" id="bg" />
    
    <div class="Icons">
        <button class="foodAndDrink"></button>
        <button class="museum"></button>
        <button class="theater"></button>
        <button class="park"></button>
        <button class="sport"></button>
        <button class="music"></button>
        <button class="landmark"></button>
    </div>

    <div class="frontGrid">
        <div class="text">
            <h2>CLEWalks</h2>
            <h4>Need help getting around? Let us be your guide!</h4>
        </div>
        <div class="entryField">
            <form asp-controller="home" asp-action="map" method="get">
                <label asp-for="Type">Search for: </label>
                <select asp-for="Type" asp-items="LocationDetail.TypeList"></select>

                <label asp-for="Origin">Near: </label>
                <input asp-for="Origin" />


                @*<p> near </p>
                <input type="text" value="Tech Elevator" />*@
                <br />
                <button>
                    <i class="glyphicon glyphicon-search"></i>
                    <br />
                    <span class="buttonCopy">Let's Go!</span>
                </button>
            </form>
        </div>
    </div>
</body>
</html>
