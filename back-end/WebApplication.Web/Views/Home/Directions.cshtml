
@{
    ViewData["Title"] = "Directions";
}

<h2>Directions</h2>

<html>
<head>
    <script src="https://api.mqcdn.com/sdk/mapquest-js/v1.3.2/mapquest.js"></script>
    <link type="text/css" rel="stylesheet" href="https://api.mqcdn.com/sdk/mapquest-js/v1.3.2/mapquest.css" />

    <script type="text/javascript">
        window.onload = function () {
            L.mapquest.key = 'GzQiD08G1RdLpl99mQOAHYmKcmK7yXkZ';

            // The map
            var map = L.mapquest.map('map', {
                center: [41.5037778, -81.636886],
                layers: L.mapquest.tileLayer('map'),
                zoom: 10
            });

            function onPositionRecieved(position) {
                console.log(position);
                console.log(position.coords.latitude);
                console.log(position.coords.longitude);
            }


            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(onPositionRecieved)
            }

            // The ring
            L.circle([41.5039778, -81.638886], { radius: 150 }).addTo(map);

            // The directions
            L.mapquest.directions().route({
                start: '7100 Euclid Ave, Cleveland, OH 44103',
                end: '6610 Euclid Ave, Cleveland, OH 44103',
                options: {
                    routeType: 'pedestrian'
                }
            });
        }
    </script>
</head>

<body style="border: 0; margin: 0;">
    <div id="map" style="width: 100%; height: 530px;"></div>
</body>
</html>