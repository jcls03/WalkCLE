@model LocationDetail
@{
    ViewData["Title"] = "Detail";
}
<style>
    body {
        background-color: #584036;
    }

    .detailGrid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 50px 1fr 40px;
        grid-template-areas: "image title" "image description" "image tags";
        grid-gap: 20px;
        border: 3px solid rgba(25, 25, 25, .5);
        padding: 20px;
        background: rgba(52, 41, 7, .5);
        border-radius: 3px;
        margin-top: 25px;
    }
    .title {
        grid-area: title;
    }
    .image {
        grid-area: image;
        max-width: 100%;
        max-height: 100%;
        vertical-align: middle;
    }
    .description {
        grid-area: description;
        padding-top:30px;
    }
    .tags {
        grid-area: tags;
    }


    .words {
        color: #E6D5A5;
    }

    a > img {
        height: 20px;
        width: 20px;
    }
</style>


<div class="detailGrid">
    <p class="words description" style=" position:relative;
   bottom: 0;
   right: 0;
   padding-top: 10px;">
        Located at:
        @Model.Street
        @Model.City
        @Model.State
        @Model.Zip
    </p>
    <p class="words description" style="padding-top:40px;"> @Model.Description</p><br />
    @*<a asp-controller="home" asp-action="Directions" class="description">Need Directions?</a><br />*@
    <img class="image" style="border-radius: 3px;" src="~/images/@Model.Image_Path" alt="@Model.Name" />



    <div class="title">

        <h2 class="words">@Model.Name</h2>
        <a href="@Model.WebLink"> @Model.Name's Web Site </a>

        <a href="@Model.FbLink"> <img src="~/images/facebook_circle.png" /> </a>

        <a href="@Model.TwLink"> <img src="~/images/twitter-512.png" /></a>

        <a href="@Model.IgLink"> <img src="~/images/instagram-round-flat-512.png" /> </a>

        <a href="https://www.google.com/maps/search/?api=1&query=Google&query_place_id=@Model.Place_Id"> Google Results </a>
    </div>
</div>



