@using WebApplication.Web.Models.Account;
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<style>
    html, body {
        background-color: #584036;
    }

    .words {
        color: #E6D5A5;
    }
</style>

<h2>Register</h2>

<form asp-controller="account" asp-action="register" method="post" class="words">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" placeholder="Email" style="color:black"/>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" style="color:black"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input type="password" asp-for="ConfirmPassword" style="color:black"/>
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>